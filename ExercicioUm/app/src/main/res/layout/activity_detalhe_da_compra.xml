<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".informacao.DetalheDaCompra">

    <ImageView
        android:id="@+id/imagemCarrinhoDois"
        android:layout_width="@dimen/tamanho_125"
        android:layout_height="@dimen/tamanho_125"
        android:layout_marginTop="108dp"
        android:src="@drawable/carrinho"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvResultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margem_16"
        android:gravity="center"
        android:text="O VALOR TOTAL É DE: R$ 00,00"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/imagemCarrinhoDois"
        tools:layout_editor_absoluteX="80dp"/>

    <Button
        android:id="@+id/butaoRefazerCompra"
        android:layout_width="258dp"
        android:layout_height="42dp"
        android:layout_margin="80dp"
        android:backgroundTint="@color/terceiraCor"
        android:text="@string/botão_refazer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tvResultado"
        app:layout_constraintTop_toBottomOf="@+id/tvResultado" />

</androidx.constraintlayout.widget.ConstraintLayout>